@{
    ViewData["Title"] = "Books";
    Layout = "_Layout";
}

<button class="btn btn-primary" onclick="nuevoLibro()">Nuevo libro</button>
<br>
<br>
<div class="row">
    <table width="100%" 
            class="table" 
            id="grid_libros" 
            style="table-layout: fixed; word-break: break-word !important;">
        <thead class="thead-default">
            <tr>
                <th>Author</th>
                <th>Apellido</th>
                <th>Titulo del libro</th>
                <th>Editorial</th>
                <th>Coleccion</th>
                <th>score</th>
                <th>reseña</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        var columns = [{
            "data": "nombreAuthor",
            "name": "nombreAuthor",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "apellidoAuthor",
            "name": "apellidoAuthor",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "nombreBooks",
            "name": "nombreBooks",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "editorial",
            "name": "editorial",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "collection",
            "name": "collection",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        }, {
            "data": "score",
            "name": "score",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: "*"
        }, {
            "data": "review",
            "name": "review",
            "searchable": true,
            "visible": true,
            "orderable": true,
            defaultContent: ""
        },
            {
            data: function (row, type, set) {
                var s = '';
                
                s +=   
                    `<button 
                        type='button' 
                        class='btn btn-sm btn-secondary' 
                        onclick='editarLibro(${row.id})'
                        title='Editar'
                        style='margin-left:2px;background-color:green;'>
                            <svg class="c-icon glyphicon" style='width:12px;height:12px;margin-top:-3px;'>
                                <use xlink: 
                                    href="${urlContent}img/icons/svg/free.svg#cil-pencil">
                                </use>
                            </svg>
                    </button>`;
                
                s +=   
                    `<button 
                        type='button' 
                        class='btn btn-sm btn-secondary' 
                        onclick='verLibro(${row.id})'
                        title='Ver'
                        style='margin-left:2px;background-color:green;'>
                            <svg class="c-icon glyphicon" style='width:12px;height:12px;margin-top:-3px;'>
                                <use xlink: 
                                    href="${urlContent}img/icons/svg/free.svg#cil-zoom-in">
                                </use>
                            </svg>
                    </button>`;
                
                s +=   
                    `<button 
                        type='button' 
                        class='btn btn-sm btn-secondary' 
                        onclick='eliminarLibro(${row.id}, "${row.nombreBooks}")'
                        title='Eliminar'
                        style='margin-left:2px;background-color:red;'>
                            <svg class="c-icon glyphicon" style='width:12px;height:12px;margin-top:-3px;'>
                                <use xlink: 
                                    href="${urlContent}img/icons/svg/free.svg#cil-trash">
                                </use>
                            </svg>
                    </button>`;

                return s;
            },
            "searchable": false,
            "orderable": false,
            "visible": true,
            defaultContent: ""
        }];
        
        createGrid(
            'grid_libros', 
            'Books/Listar', 
            'libros', 
            columns, 
            null, 
            true);
    });

    function nuevoLibro()
    {
        window.location = urlContent + "Books/Nuevo";
    }

    function editarLibro(idBooks)
    {
        window.location = urlContent + "Books/Editar?idBooks=" + idBooks;
    }

    function verLibro(idBooks)
    {
        window.location = urlContent + "Books/Ver?idBooks=" + idBooks;
    }

    function eliminarLibro(idBooks, nombreBooks)
    {
        msjPregunta("Pregunta", "¿Está seguro que desea eliminar el libro " + nombreBooks + "?", function()
        {
            let data = {
                id: idBooks
            };

            ajax(
                "post", 
                "Books/Eliminar", 
                data, 
                "Eliminando...", 
                "Espere por favor...", 
                function(response){
                    msjSuccess("Éxito", "El libro se eliminó correctamente", function(){
                        reloadGrid("grid_libros", false);
                    });
                }, null);

        }, function() {

        });
    }
</script>